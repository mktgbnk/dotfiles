syntax on

set number
set autoindent
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab
set smarttab
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
set ruler

set mouse=a
set encoding=utf-8
set fileencoding=utf-8
set background=dark
colorscheme default

set nobackup
set noswapfile
set autoread
